    <div class="three-dots"></div>
    <div class="dropdown">

<!--      <div><a><%#= link_to 'Destroy', article_path(article), method: :delete,  data: {confirm: "Are you sure?"}  %></a></div>-->
      <%= link_to 'Edit', edit_article_path(article) %><br>
      <%= link_to 'Destroy', article_path(article), method: :delete,  data: {confirm: "Are you sure?"}  %>
    </div>
  </div>
</span>


<!--for every article-->
      <div class="drop-give">
           <div class="every-article">
           <div class="article-1">
             <%= image_tag "Vector.png"%>  <a href="http://localhost:3000/articles/<%=article.id%>"><%=article.title %></a>

           </div>
           </div>
           <div class="time-check">
       <%= time_ago_in_words(article.created_at) %> ago
           </div>
           <div class="body-1">
              <h6><%= article.body %></h6>
           </div>
           </div>

