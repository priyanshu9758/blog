   <div class="every-comment">
     <p class="present">    <%=comment.present? ?  comment.last.body : '' %></p>
      <%=  comment.present?  ? time_ago_in_words(comment.last.created_at) : '' %>
   </div>
   <hr class="new-line"></div>
  <% end %>

